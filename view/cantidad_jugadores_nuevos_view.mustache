<script type="text/javascript">
    var data;
    var chart;
    var totalJugadoresNuevos = {{cantidadJugadoresNuevos}};
    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        // Create our data table.
        data = new google.visualization.DataTable();
        data.addColumn('string', 'Categoria');
        data.addColumn('number', 'Cantidad');
        data.addRows([
            ['Total', totalJugadoresNuevos],
        ]);

        // Set chart options
        var options = {'title':'Cantidad total de jugadores nuevos (ULTIMOS 15 DIAS)'};

        // Instantiate and draw our chart, passing in some options.
        chart = new google.visualization.BarChart(document.getElementById('grafico'));
        google.visualization.events.addListener(chart, 'select', selectHandler);
        chart.draw(data, options);

        document.getElementById('img').value = chart.getImageURI();
    }

    function selectHandler() {
        var selectedItem = chart.getSelection()[0];
        var value = data.getValue(selectedItem.row, 0);
        alert('The user selected ' + value);
    }

</script>

<form action="/admin/generarPDF" method="post">
    <input type="hidden" name="img" id="img">
    <div id="grafico" style="width: 100%; height: 500px;"></div>

    <button type="submit">Generar PDF</button>
</form>