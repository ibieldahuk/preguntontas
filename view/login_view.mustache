

<body class="bg-light ">
<div class="container m-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1>Login</h1>
            <form action="/userController/Login" method="post">
                <div class="mb-3">
                    <label for="usuario" class="form-label">Username</label>
                    <input type="text" class="form-control" id="usuario" placeholder="Ingresa usuario" name="usuario" required>
                </div>

                <div class="mb-3">
                    <label for="contrasena" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contrasena" placeholder="Ingresa Contraseña" name="contraseña" required>
                </div>

                <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                <a href="/userController/renderRegister" class="ms-2">Regístrate</a>

                {{#error}}
                    <div class="mt-3 alert alert-danger">Usuario invalido</div>
                {{/error}}
            </form>
        </div>
    </div>
</div>
</body>