html {
    min-height: 100%;
}

* {
    margin: 0;
    font-size: 17pt;
    font-family: monospace;
}

body {
    min-height: 100%;
    background-image: linear-gradient(#f1916d, #f5d7db, #bd83b8, #473e66, #1b3358, #06142e);
    background-repeat: no-repeat;
    background-attachment: fixed;
}

nav {
    padding: 0.5em;
    background-color: #06142e;
}

nav a {
    margin: 0.5em;
    padding: 0.25em;
    outline: #f5d7db solid 1px;
    text-align: center;
    text-decoration: none;
    background-color: #1b3358;
    color: #f5d7db;
}

nav a:hover {
    outline-color: #f1916d;
    color: #f1916d;
}

main {
    max-width: 1024px;
    /* ANAMIOS */
    margin: 3em auto;
    /* FIN ANDAMIOS cambiar por: */
