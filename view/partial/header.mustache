    background-color: rgba(6, 20, 46, 0.76);
}

h1 {
    padding: 1em;
    text-align: center;
    color: #f5d7db;
}

.enfasis {
    color: #f1916d;
}

.juego {
    outline-style: solid;
    outline-color: #bd83b8;
}

.pregunta {
    padding: 0.5em;
    text-align: center;
    background-color: #bd83b8;
    color: #06142e;
}

.opciones {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 1.5em 1em;
}

.opcion {
    width: 40%;
    margin: 0.5em;
    padding: 0.25em;
    outline: #f5d7db solid 1px;
    text-align: center;
    background-color: #1b3358;
    color: #f5d7db;
}

.opcion:hover {
    outline-color: #f1916d;
    color: #f1916d;
    cursor: pointer;
}

</style>
