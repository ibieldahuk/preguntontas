<style>
    a{
        text-decoration: none;
    }

    li{
        list-style: none;
        padding: 5px;
        margin: 10px;
    }
    .Entretenimiento {
        background-color: #bd83b8;
    }

    .Deporte {
        background-color: #226782;
    }

    .Naturaleza {
        background-color: #46a146;
    }
    .Geografia{
        background-color: #4c967e;
    }
    .mt-5 {
        margin-top: 9rem!important;
    }
</style>

<body {{#categoria}}class="{{categoria}}"{{/categoria}}>
<div class="container mt-5">
    <h1 class="text-center mt-5">Preguntontas</h1>
    <div class="card text-dark bg-light mx-auto mt-4" style="max-width: 800px; border-radius: 20px;">
        {{#pregunta}}
            <div class="card-body">
                <h2 class="card-title">{{Pregunta}}</h2>
            </div>
        {{/pregunta}}
        {{#respuestas}}
            <a href="/juego/respuesta/id={{opcioncorrecta}}" class="list-group-item list-group-item-action opciones text-center bg-grey">
            {{opcion}}
            </a>
        {{/respuestas}}
        {{#check}}
            <div class="card-body text-center">
                {{check}}
                <h2 class="card-text"><a href="/juego/partida" class="btn btn-primary">Nueva partida</a></h2>
            </div>
        {{/check}}
        {{#racha}}
            <div class="card-body text-center">
                <p class="card-text">Tu racha es de: {{racha}}</p>
            </div>
        {{/racha}}

        {{#idPregunta}}
            <div class="card-body">
                <a href="/juego/reportarPregunta/id={{idPregunta}}" class="text-danger"><i class="bi bi-exclamation-lg"></i> Reportar pregunta</a>
                {{#reportar}}
                    <p class="card-text">Esta pregunta fue reportada</p>
                {{/reportar}}
            </div>
        {{/idPregunta}}
    </div>
</div>

</body>