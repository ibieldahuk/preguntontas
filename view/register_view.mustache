<body class="fondo" {{#map_is_on}}onload="initMap()" {{/map_is_on}}>
<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Preguntontas</h2>
    <table class='w3-table'>
    <h1>REGISTER</h1>
        <form action="/user/register" method="post" enctype="multipart/form-data">
            <div class="w3-row-padding">
                <div class="w3-half">
                    <div class="w3-margin">
                        <input type="text" placeholder="Ingresa nombre" name="nombre" class="w3-input" required>
                    </div>

                    <div class="w3-margin">
                        <label>Año de nacimiento</label>
                        <input type="date" name="fechaNacimiento" class="w3-input" required>
                    </div>
                    <div class="w3-margin">
                        <input type="text" id="seleccionar_pais" name="seleccionar_pais" class="form-control" placeholder="Ingrese país"
                               value="{{#pais}}{{.}}{{/pais}}">
                    </div>
                    <div {{#pais}}onload="cargarMapaSiInputsEstanCompletos()" {{/pais}}></div>
                    <div class="mb-2">
                        <input type="text" id="seleccionar_ciudad" name="seleccionar_ciudad" class="form-control" placeholder="Ingrese ciudad"
                               value="{{#ciudad}}{{.}}{{/ciudad}}">
                    </div>
                    <div class="mb-2 d-none text-center" id="error_busqueda_mapa">
                        <p class="alert alert-danger">Uno de los filtros del mapa se encuentra vacio, por favor completalo para que se realice la busqueda</p>
                    </div>
                    <div class="mb-2">
                        <button class="btn btn-primary" type="button" onclick="validarBusqueda()">Buscar en el mapa</button>
                    </div>
                    <div class="mb-2">
                        <div class="" style="width: auto;height: 300px;" id="mapa">
                        </div>
                    </div>
                    <div>
                        <input type="hidden" id="latitud" name="latitud" value="{{#latitud}}{{.}}{{/latitud}}">
                        <input type="hidden" id="longitud" name="longitud" value="{{#longitud}}{{.}}{{/longitud}}">
                    </div>


                </div>

                <div class="w3-half">
                    <div class="w3-margin">
                        <input type="text" placeholder="Ingresa apellido" name="apellido" class="w3-input" required>
                    </div>
                    <div class="w3-margin">
                        <select name="sexo" id="sexo" class="w3-select">
                            <option value="" disabled selected>Seleccione un Genero</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Otro">Prefiero no decirlo</option>
                        </select>
                    </div>
                    <div class="w3-margin">
                        <input type="email" placeholder="Ingresa Email" name="email" class="w3-input" required>
                    </div>
                    <div class="w3-margin">
                        <input type="text" placeholder="Ingresa usuario" name="usuario" class="w3-input" required>
                    </div>
                    <div class="w3-margin">
                        <input type="password" placeholder="Ingresa Contraseña" name="contraseña" class="w3-input" required>
                    </div>
                    <div class="w3-margin">
                        <input type="password" placeholder="Repita la contraseña" name="repiteContraseña" class="w3-input" required>
                    </div>
                </div>
                <div class="w3-container w3-center w3-margin-top">
                    <label>Foto de perfil</label>
                </div>
                <input type="file" name="file" required>
                <br>
                <br>
                <button class="w3-button w3-round-large w3-teal" type="submit">Registrar</button>
                {{#error}}
                    <div class="w3-red w3-padding-16 w3-margin" style="font-size: large">{{error}}</div>
                {{/error}}
            </div>
        </form>
    </table>
</div>
</body>
